{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"context7": {
			"type": "local",
			"command": ["bunx", "@upstash/context7-mcp"],
			"enabled": true
		},
		"github": {
			"type": "remote",
			"url": "https://api.githubcopilot.com/mcp/",
			"headers": {
				"Authorization": "Bearer {file:~/.secrets/github-mcp-pat}"
			}
		}
	},
	"permission": {
		"bash": "ask"
	},
	"theme": "tokyonight"
}
